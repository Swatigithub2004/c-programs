#include <stdio.h>
#include <stdlib.h>

int main(){
    int n, i;

    printf("Enter the size of array: ");
    scanf("%d", &n);

    int *arr = malloc(n * sizeof(int));
    if(arr == NULL){
        printf("Memory allocation failed\n");
        return 1;
    }

    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++){
        scanf("%d", &arr[i]);
    }

    int max = arr[0];   // â­ VERY IMPORTANT

    for(i = 1; i < n; i++){
        if(arr[i] > max){
            max = arr[i];
        }
    }

    printf("Largest element = %d\n", max);

    free(arr);
    return 0;
}
