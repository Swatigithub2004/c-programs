#include <stdio.h>
#include <stdlib.h>
int main(){
    int n, i, sum=0;
    int*arr;
    printf("enter the size of array:");
    scanf("%d",&n);
    arr = (int*)malloc(n*sizeof(int));
    if(arr == NULL){
        printf("Memory allocation failed\n");
        return 1;
    }

    printf("enter elements:");
    for(i=0 ; i<n ; i++){
        scanf("%d",arr+i);
        sum += *(arr+i);
    }
    printf("sum = %d\n",sum);
    free(arr);
    return 0;
}